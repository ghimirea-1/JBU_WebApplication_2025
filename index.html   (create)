<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8" />
  <meta name="viewport" content="width=device-width, initial-scale=1.0"/>
  <title>Event Planner</title>
  <link href="https://unpkg.com/tailwindcss@2.2.19/dist/tailwind.min.css" rel="stylesheet" />
</head>
<body class="bg-gray-100 min-h-screen">
  <div class="container mx-auto p-4">
    
    <!-- Guest Login Section -->
    <div id="guestLoginSection" class="bg-white p-6 rounded-lg shadow-md mb-6">
      <h2 class="text-2xl font-bold mb-4">Login</h2>
      <button onclick="showGuestNameInput()" class="bg-blue-500 hover:bg-blue-600 text-white px-4 py-2 rounded mb-4">Login as Guest</button>
      
      <div id="guestNameInputSection" class="hidden">
        <label class="block mb-1 font-semibold">Enter Your Name:</label>
        <input id="guestName" type="text" class="w-full p-2 border rounded mb-2" placeholder="Guest Name" />
        <button onclick="enterAsGuest()" class="bg-green-500 hover:bg-green-600 text-white px-4 py-2 rounded w-full">Continue</button>
      </div>
    </div>

    <!-- Event Form Section -->
    <div id="plannerSection" class="hidden bg-white p-6 rounded-lg shadow-md">
      <h1 class="text-3xl font-bold mb-6 text-center">Event Planner (Guest)</h1>

      <label class="block mb-1 font-semibold">Event Title:</label>
      <input id="eventTitle" type="text" class="w-full p-2 border rounded mb-3" />

      <label class="block mb-1 font-semibold">Event Description:</label>
      <textarea id="eventDescription" class="w-full p-2 border rounded mb-3" rows="4"></textarea>

      <label class="block mb-1 font-semibold">Date/Time:</label>
      <input id="eventDate" type="datetime-local" class="w-full p-2 border rounded mb-3" />

      <label class="block mb-1 font-semibold">Estimated Expenses:</label>
      <input id="eventExpenses" type="text" class="w-full p-2 border rounded mb-3" />

      <label class="block mb-1 font-semibold">Location:</label>
      <input id="eventLocation" type="text" class="w-full p-2 border rounded mb-3" />

      <label class="block mb-1 font-semibold">Organized By:</label>
      <input id="eventOrganizer" type="text" class="w-full p-2 border rounded mb-4" />

      <button onclick="goToEventPage()" class="bg-purple-500 hover:bg-purple-600 text-white px-4 py-2 rounded w-full">View Event</button>
    </div>
  </div>

  <script>
    let guestName = "";

    document.addEventListener('DOMContentLoaded', () => {
      const eventDateInput = document.getElementById('eventDate');
      const now = new Date();
      const nowString = now.toISOString().slice(0, 16);
      eventDateInput.setAttribute('min', nowString);
    });

    function showGuestNameInput() {
      document.getElementById('guestNameInputSection').classList.remove('hidden');
    }

    function enterAsGuest() {
      const nameInput = document.getElementById('guestName').value.trim();
      if (!nameInput) {
        alert('Please enter your name.');
        return;
      }
      guestName = nameInput;
      document.getElementById('guestLoginSection').classList.add('hidden');
      document.getElementById('plannerSection').classList.remove('hidden');
    }

    function goToEventPage() {
      const title = document.getElementById('eventTitle').value.trim();
      const description = document.getElementById('eventDescription').value.trim();
      const date = document.getElementById('eventDate').value;
      const expenses = document.getElementById('eventExpenses').value.trim();
      const location = document.getElementById('eventLocation').value.trim();
      const organizer = document.getElementById('eventOrganizer').value.trim();

      if (!title || !description || !date || !expenses || !location || !organizer) {
        alert('Please fill in all fields.');
        return;
      }

      const params = new URLSearchParams({
        title,
        description,
        date,
        expenses,
        location,
        organizer,
        creator: guestName
      });

      window.location.href = `event.html?${params.toString()}`;
    }
  </script>
</body>
</html>
